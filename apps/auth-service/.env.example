# ========================
# Server Configuration
# ========================
NODE_ENV=development
PORT=3001
API_PREFIX=/api/v1

# ========================
# Database Configuration
# ========================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/auth_db

# ========================
# JWT Configuration
# ========================
JWT_ACCESS_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=7d

# ========================
# SES Configuration
# ========================
SES_SMTP_HOST=your_smtp_host_here
SES_SMTP_PORT=587
SES_SMTP_USER=your_smtp_user_here
SES_SMTP_PASS=your_smtp_pass_here
SES_SMTP_FROM=your_email@example.com

# ========================
# Security Configuration
# ========================
BCRYPT_SALT_ROUNDS=12
OTP_EXPIRES_IN=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# ========================
# CORS Configuration
# ========================
CORS_ORIGIN=http://localhost:8080,http://localhost:8081

# ========================
# SMS Configuration - FAST2SMS
# ========================
FAST2SMS_API_URL=value
SMS_TEST_NUMBERS=value

# ========================
# Service Configuration
# ========================
SCHOOL_SERVICE_URL=http://school-service:3002
SCHOOL_SERVICE_TIMEOUT=30000
